pipeline {
    agent any

    environment {
        AWS_REGION     = "us-east-1"
        AWS_ACCOUNT_ID = "828264807293"
        ECR_REPO       = "emailservice"
        ECR_URI        = "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com"

        GIT_REPO_NAME  = "Microservices-E-Commerce-eks-project"
        GIT_USER_NAME  = "mohammedsaqlain23"
        GIT_EMAIL      = "mohammedsaqlain023@gmail.com"
        YAML_FILE      = "emailservice.yaml"
    }

    stages {

        stage('Cleaning Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout from Git') {
            steps {
                git branch: 'master',
                    url: "https://github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git"
            }
        }

        stage('Docker Image Build') {
            steps {
                dir('src/emailservice') {
                    sh '''
                      docker system prune -f
                      docker container prune -f
                      docker build -t ${ECR_REPO}:latest .
                    '''
                }
            }
        }

        stage('ECR Image Pushing') {
            steps {
                sh '''
                  aws ecr get-login-password --region ${AWS_REGION} \
                  | docker login --username AWS --password-stdin ${ECR_URI}

                  docker tag ${ECR_REPO}:latest ${ECR_URI}/${ECR_REPO}:${BUILD_NUMBER}
                  docker push ${ECR_URI}/${ECR_REPO}:${BUILD_NUMBER}
                '''
            }
        }

        stage('Update Deployment file') {
            steps {
                dir('kubernetes-files') {
                    withCredentials([
                        string(credentialsId: 'my-git-pattoken', variable: 'GIT_TOKEN')
                    ]) {
                        sh '''
                          set -e

                          git config --global user.email "${GIT_EMAIL}"
                          git config --global user.name "${GIT_USER_NAME}"

                          sed -i "s#image:.*#image: ${ECR_URI}/${ECR_REPO}:${BUILD_NUMBER}#g" ${YAML_FILE}

                          git add ${YAML_FILE}

                          # Commit only if file changed
                          git diff --cached --quiet || git commit -m "Update emailservice image to ${BUILD_NUMBER}"

                          git push https://${GIT_TOKEN}:x-oauth-basic@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git HEAD:master
                        '''
                    }
                }
            }
        }
    }

    post {
        success {
            echo "✅ Emailservice image pushed and deployment updated successfully"
        }
        failure {
            echo "❌ Pipeline failed. Check logs."
        }
    }
}
